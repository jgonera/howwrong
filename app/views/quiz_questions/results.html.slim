- content_for :nav do
  - if @questions_left != 0
    = "#{pluralize(@questions_left, 'question')} left"
  - else
    a href=quiz_results_path(@quiz) See quiz results


a.button.uppercase.icon.next href=@next_path = @next_label

dl class="question"
  dt Question
  dd
    h1 = @question.text
dl.answer
  dt.icon.tick Correct Answer
  dd
    = @question.answers.correct.label
    a href=@question.source_url = @question.source
dl.answer
  dt class="#{@is_wrong ? 'icon cross' : 'icon tick'}" Your Answer
  dd = @question.answers.find(@vote_answer_id).label
dl id="other"
  dt How Others Answered
  dd
    table class="results"
      - for answer in @question.answers do
        tr class=((answer.is_correct ? 'correct' : '') + ' ' + (answer.id == @vote_answer_id ? 'vote' : ''))
          td = answer.label
          td = answer.votes
    div.chart
